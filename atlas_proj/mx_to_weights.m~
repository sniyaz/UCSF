function [weights] = mx_to_weights(mx_input)
    
    mx_size = size(mx_input, 1)
    
    
    
    
    
    mx_inverse = inv(mx_input)
    ones_n = ones(mx_size, 1)
    weights = mx_inverse*ones_n
    constant = (transpose(ones_n)*(mx_inverse*ones_n))
    weights = weights/constant
    
    

    
end
    
    
 